<%= link_to "edit", edit_project_path(@project), class: "btn btn-warning" %><%= link_to "delete", project_path(@project), method: :delete, data: {confirm: "Are you sure? This is permanent and cannot be undone."}, class: "btn btn-danger" %><br />
<%= @project.title %><br />
<%= @project.body %>
<hr>
<h2>Discussions</h2>
<%= render "discussions/form" %>
<ul>
<% @project.discussions.each do |discussion| %>
  <li><%= link_to discussion.title, [@project, discussion] %><span class="pull-right"><%= link_to "Edit", edit_project_discussion_path(@project, discussion), class: "btn btn-warning btn-sm" %><%= link_to "Delete", [@project, discussion], method: :delete, class: "btn btn-danger btn-sm" %></span></li>
<% end %>
</ul>